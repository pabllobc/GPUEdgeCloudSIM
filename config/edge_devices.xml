<!--
  GpuEdgeCloudSim v1.0 - Edge Devices Configuration
  
  This file defines the GPU-enabled edge computing infrastructure including:
  - Edge datacenters with GPU-equipped hosts
  - GPU specifications (NVIDIA T4, A100, etc.)
  - VM configurations with GPU requirements
  - Geographic locations and network topology
  
  Author: Pabllo Borges Cardoso
  Date: October 23, 2025
-->

<edge_devices>
	
	<!-- =========================================== -->
	<!-- DATACENTER 1: Edge Server with NVIDIA T4   -->
	<!-- Location: Downtown Area (High User Density) -->
	<!-- =========================================== -->
	<datacenter arch="x86" os="Linux" vmm="Xen">
		<costPerBw>0.1</costPerBw>
		<costPerSec>3.0</costPerSec>
		<costPerMem>0.05</costPerMem>
		<costPerStorage>0.1</costPerStorage>
		
		<!-- Location coordinates (meters) -->
		<location>
			<x_pos>200</x_pos>
			<y_pos>100</y_pos>
			<wlan_id>0</wlan_id>
			<attractiveness>3</attractiveness>
		</location>
		
		<hosts>
			<!-- Host 1: GPU Server with NVIDIA T4 -->
			<host>
				<core>8</core>
				<mips>20000</mips>
				<ram>32768</ram> <!-- 32 GB RAM -->
				<storage>1000000</storage> <!-- 1 TB -->
				
				<!-- GPU Specifications -->
				<gpus>
					<gpu>
						<type>NVIDIA_T4</type>
						<cudaCores>2560</cudaCores>
						<gflops>8100</gflops> <!-- 8.1 TFLOPs FP32 -->
						<memory>16384</memory> <!-- 16 GB GDDR6 -->
						<bandwidth>320</bandwidth> <!-- 320 GB/s -->
					</gpu>
				</gpus>
				
				<!-- Virtual Machines -->
				<VMs>
					<!-- VM 1: GPU-enabled for ML Inference -->
					<VM vmm="Xen" requiresGpu="true">
						<core>4</core>
						<mips>10000</mips>
						<ram>16384</ram> <!-- 16 GB -->
						<storage>500000</storage>
					</VM>
					
					<!-- VM 2: CPU-only for lightweight tasks -->
					<VM vmm="Xen" requiresGpu="false">
						<core>4</core>
						<mips>10000</mips>
						<ram>16384</ram>
						<storage>500000</storage>
					</VM>
				</VMs>
			</host>
		</hosts>
	</datacenter>
	
